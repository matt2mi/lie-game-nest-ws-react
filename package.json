{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node index-prod.js",
    "start:react": "react-scripts-ts start",
    "start:server": "nodemon",
